<?xml version="1.0" encoding="UTF-8"?>
<talkiPlay:BasePopupPage
    x:TypeArguments="shared:ConnectivityPageViewModel"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:talkiPlay="clr-namespace:TalkiPlay;assembly=TalkiPlay"
    xmlns:shared="clr-namespace:TalkiPlay.Shared;assembly=TalkiPlay"
    xmlns:ui="clr-namespace:ChilliSource.Mobile.UI;assembly=TalkiPlay"
    x:Class="TalkiPlay.ConnectivityPage"
    x:DataType="shared:ConnectivityPageViewModel">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            Padding="20"
            BackgroundColor="Transparent">
            <ui:ExtendedLabel
                Text="No internet connection"
                CustomFont="{x:Static talkiPlay:Fonts.Header1Font}"
                HorizontalTextAlignment="Center"
                HorizontalOptions="FillAndExpand" />
            <ui:ExtendedLabel
                Text="Please check that your Internet connection is working and that you are not in airplane mode."
                CustomFont="{x:Static talkiPlay:Fonts.Header3Font}"
                HorizontalTextAlignment="Center"
                HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</talkiPlay:BasePopupPage>
